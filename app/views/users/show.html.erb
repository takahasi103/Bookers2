<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>
              name
            </th>
            <th>
              <%= @user.name %>
            </th>
          </tr>
          <tr>
            <th>
              introduction
            </th>
            <th>
              <%= @user.introduction %>
            </th>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_user_path(@user.id), class:"btn btn-block btn-outline-secondary" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      
      <h2>New book</h2>
      <div>
        <%= form_with model: @book do |f| %>
        <div class="form-group">
          Title
          <%= f.text_field :title, class:"form-control" %>
          Opinion
          <%= f.text_area :body, class:"form-control" %>
          <%= f.submit "Create Book", class:"btn btn-bolck btn-success" %>
        </div>
       <% end %> 
      </div>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to image_tag(book.user.get_profile_image(100, 100)), user_path(book.user.id) %>
              </td>
              <td>
                <%= link_to book.title, book_path(book.id) %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


