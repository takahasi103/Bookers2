<h1>User info</h1>
<%= image_tag @user.get_profile_image(100, 100) %>
<p>name<%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>
<%= link_to "edit", edit_user_path(@user.id) %>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
  <p>title</p>
  <%= f.text_field :title %>
  <p>body</p>
  <%= f.text_area :body %>
  <%= f.submit "投稿" %>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td>
          <%= image_tag book.user.get_profile_image(100, 100) %>
        </td>
        <td>
          <%= link_to book.title, book_path(book.id) %>
        </td>
        <td>
          <%= book.body %>
        </td>
      <% end %>
    </tr>
  </tbody>
</table>
